<div class="inner" data-timezone="{{ widget.settings.timezone }}"
  data-radio-enabled="{{ widget.settings.radioAlarm }}"
  data-radio-trigger-time="{{ widget.settings.radioOnTime }}"
  data-radio-timeout="{{ widget.settings.radio.timeOut }}"
  data-radio-station="{{ widget.settings.radioStation }}">
</div>

{% if widget.settings.format == 'analog' %}
<div id="analog-clock" class="analog-clock-container">
  <div class="analog-clock">
    <div class="hour hands"></div>
    <div class="minute hands"></div>
    <div class="second hands"></div>
  </div>
</div>
{% else %}
<div id="time" data-format="{{ widget.settings.format }}">
  00:00:00
</div>
{% endif %}

{% if widget.settings.date %}
<div id="date">
  01/01/2000
</div>
{% endif %}

<audio id='audio-player'>
  <source id="radio-station" type="audio/mpeg">
</audio>
