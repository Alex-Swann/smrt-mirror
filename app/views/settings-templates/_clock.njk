<div>
  <form action="">
    {% set formats = ['12-hour', '24-hour', 'analog'] %}
    {% for format in formats %}
    <label>
      <input type="radio" name="format" value="{{ format }}" data-name="{{ widget.name }}"
      {% if widget.settings.format == format %}checked="checked"{% endif %}>
      {{ format | replace('-', ' ') | title }}
    </label>
    {% endfor %}
    <label>
      <input type="checkbox" name="date" value="date" data-name="{{ widget.name }}"
      {% if widget.settings.date %}checked="checked"{% endif %}>
      Date
    </label>
    <label>
      <input type="checkbox" name="radioAlarm" value="radioAlarm" data-name="{{ widget.name }}"
      {% if widget.settings.radioAlarm %}checked="checked"{% endif %}>
      Radio Alarm
    </label>
  </form>
  <form id="radioSettings" data-name="{{ widget.name }}">
    <label>
      <select name='radioStation'>
       <option {% if widget.settings.radioStation == "magic" %}selected{% endif %}>magic</option>
       <option {% if widget.settings.radioStation == "bbcRadio4" %}selected{% endif %}>bbcRadio4</option>
       <option {% if widget.settings.radioStation == "smooth" %}selected{% endif %}>smooth</option>
      <input type="time" value="{{ widget.settings.radioOnTime  }}" name="radioOnTime">
      Alarm Time
      <input type="submit">
    </label>
  </form>
</div>
